#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;

// Ouput data
out vec3 color;


// Values that stay constant for the whole mesh.
uniform sampler2D ParticleTexture;

uniform vec3 ParticleColor;


void main()
{

	// Output color = red 
	//color = ParticleColor;//vec3(0,0,1);
	color = texture( ParticleTexture, UV ).rgb + ParticleColor;	

}