#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;

// Ouput data
out vec4 PixelColor;


// Values that stay constant for the whole mesh.
uniform sampler2D ParticleTexture;

uniform vec3 ParticleColor;


void main()
{	
	//color = ParticleColor;//vec3(0,0,1);
	vec4 ParicleClr = vec4(ParticleColor.r, ParticleColor.g, ParticleColor.b, 0.0f);
	PixelColor = texture( ParticleTexture, UV ) + ParicleClr;		
}